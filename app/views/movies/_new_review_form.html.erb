<div id="new-review">

  <form class="form-horizontal" data-remote="true" method="post" action="/movies/<%= movie.id %>/reviews">
    <div class="form-group">
      <div class="col-sm-4"><!-- Want to See --></div>
      <div class="col-sm-4"><!-- Not interested --></div>
      <label for="rating_out_of_ten" class="sr-only control-label"></label>
      <div class="col-sm-4">
        <span class="star-rating">
          <input type="radio" name="rating_out_of_ten" value="1"><i></i>
          <input type="radio" name="rating_out_of_ten" value="2"><i></i>
          <input type="radio" name="rating_out_of_ten" value="3"><i></i>
          <input type="radio" name="rating_out_of_ten" value="4"><i></i>
          <input type="radio" name="rating_out_of_ten" value="5"><i></i>
        </span>
      </div>

      <label for="text" class="sr-only control-label"></label>
      <div class="col-sm-11">
        <input type="text" placeholder="Add a review.." class="form-control" name="text" id="review-text" data-movie="<%= movie.id %>" data-user="<%= current_user %>" required="required">
      </div>
    </div>
    
  </form>
</div>