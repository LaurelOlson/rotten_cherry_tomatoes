<h1>Users</h1>
<hr>

<%= link_to "Add a user", new_admin_user_path %>
<hr>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Created</th>
    <th>Admin?</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= user.admin == 1 ? 'Y' : 'N' %></td>
      <td><%= link_to 'edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'delete', admin_user_path(user), method: :delete, data: { confirm: 'You sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<%= paginate @users %>
<%= page_entries_info @users %>
<hr/>